{
  "info": {
    "name": "Venux Bijoux API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Test\", \"email\": \"test@example.com\", \"password\": \"password\" }"
        }
      }
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    }
  ]
}
